<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="catbreedersystem.CustomerController" spacing="10" alignment="CENTER">
    <Label text="Customer Dashboard" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <Label text="Available Cats" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
    <ListView fx:id="availableCatListView" maxWidth="300" maxHeight="150"/>
    
    <Button text="Reserve Cat" onAction="#handleReserveCat" maxWidth="200"/>
    <Button text="Cancel Reservation" onAction="#handleCancelReservation" maxWidth="200"/>

    <Label text="My Reservations" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
    <ListView fx:id="reservationListView" maxWidth="300" maxHeight="150"/>

    <Label text="My Profile" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
    <Button text="View Profile" onAction="#handleViewProfile" maxWidth="200"/>
    <Button text="Update Profile" onAction="#handleUpdateProfile" maxWidth="200"/>
</VBox>
