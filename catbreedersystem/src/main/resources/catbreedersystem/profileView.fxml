<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="catbreedersystem.ProfileController"
      spacing="20" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #f5f5f5;">
    
    <!-- Profile Title -->
    <Label text="My Profile" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" />
    
    <!-- Current Profile Info -->
    <Label fx:id="userNameLabel" text="Name: " style="-fx-font-size: 18px;" />
    <Label fx:id="userEmailLabel" text="Email: " style="-fx-font-size: 18px;" />
    <Label fx:id="userPhoneLabel" text="Phone: " style="-fx-font-size: 18px;" />
    
    <!-- Update Section -->
    <VBox spacing="10" alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #e3f2fd; -fx-border-color: #2196F3; -fx-border-radius: 5;">
        <TextField fx:id="nameField" promptText="Update Name" />
        <TextField fx:id="emailField" promptText="Update Email" />
        <TextField fx:id="phoneField" promptText="Update Phone" />
        <Button text="Update Profile" onAction="#handleUpdateProfile" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" />
    </VBox>

    <!-- Close Button -->
    <Button text="Close" onAction="#handleClose" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;" />
</VBox>
