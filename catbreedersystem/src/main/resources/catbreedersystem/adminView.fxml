<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="catbreedersystem.AdminController" spacing="10" alignment="CENTER" style="-fx-background-color: #f9f9f9; -fx-padding: 20;">
    <Label text="Admin Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2e2e2e;" />

    <Button text="Add Cat" onAction="#handleAddCat" maxWidth="200"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;">
    </Button>
    <Button text="Delete Cat" onAction="#handleDeleteCat" maxWidth="200"
            style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;">
    </Button>
    <Button text="Update Cat" onAction="#handleUpdateCat" maxWidth="200"
            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;">
    </Button>

    <Label text="All Cats" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
    <ListView fx:id="catListView" maxWidth="300" maxHeight="150"
              style="-fx-border-color: #cccccc; -fx-border-width: 2; -fx-border-radius: 5; -fx-padding: 5;"/>

    <Label text="All Customers" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
    <ListView fx:id="customerListView" maxWidth="300" maxHeight="150"
              style="-fx-border-color: #cccccc; -fx-border-width: 2; -fx-border-radius: 5; -fx-padding: 5;"/>

    <Label text="All Reservations" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
    <ListView fx:id="reservationListView" maxWidth="300" maxHeight="150"
              style="-fx-border-color: #cccccc; -fx-border-width: 2; -fx-border-radius: 5; -fx-padding: 5;"/>
</VBox>