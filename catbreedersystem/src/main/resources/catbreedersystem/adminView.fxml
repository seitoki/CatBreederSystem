<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="catbreedersystem.AdminController" spacing="10" alignment="CENTER">
    <Label text="Admin Dashboard" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <Button text="Add Cat" onAction="#handleAddCat" maxWidth="200"/>
    <Button text="Delete Cat" onAction="#handleDeleteCat" maxWidth="200"/>
    <Button text="Update Cat" onAction="#handleUpdateCat" maxWidth="200"/>
    
    <Label text="All Cats" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
    <ListView fx:id="catListView" maxWidth="300" maxHeight="150"/>

    <Label text="All Customers" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
    <ListView fx:id="customerListView" maxWidth="300" maxHeight="150"/>

    <Label text="All Reservations" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
    <ListView fx:id="reservationListView" maxWidth="300" maxHeight="150"/>
</VBox>
